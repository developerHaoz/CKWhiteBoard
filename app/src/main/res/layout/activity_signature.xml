<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/gray_light"
    >

    <include layout="@layout/part_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:text="@string/ChooseEvaluation"
        />

    <TextView
        android:id="@+id/signature_tv_evaluation"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/app_button"
        android:drawableRight="@mipmap/ic_launcher"
        android:gravity="center_vertical"
        android:text="@string/Ok"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_gray"
        />

    <com.example.developerhaoz.ckwhiteboard.test.Doodle
        android:id="@+id/signature_doodle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:paddingBottom="4dp"
        android:background="@color/white"
        >

        <Button
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/signature_btn_reevaluate"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/ReEvaluate"
            android:background="@drawable/shape_button_reevaluate"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/signature_btn_confirm"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/signature_btn_reevaluate"
            android:layout_toStartOf="@+id/signature_btn_reevaluate"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:text="@string/Confirm"
            android:background="@drawable/shape_button_confirm"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</LinearLayout>




















