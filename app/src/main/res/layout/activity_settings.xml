<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/settings_background"
              android:orientation="vertical"
    >

    <include layout="@layout/part_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="2dp"
            android:paddingStart="20dp"
            android:text="@string/TeamName"
            android:textSize="12sp"
            android:paddingEnd="2dp"
            />

        <EditText
            android:id="@+id/settings_et_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            />


    </LinearLayout>

    <include layout="@layout/part_app_divide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:text="@string/TeamIntroduce"
            android:textSize="12sp"
            />

        <EditText
            android:id="@+id/settings_et_team_introduce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            />

    </LinearLayout>

    <include layout="@layout/part_app_divide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8">

        <TextView
            android:id="@+id/settings_tv_team_logo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="2dp"
            android:paddingStart="20dp"
            android:text="@string/logo"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/settings_iv_team_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/SelectedImage"
            android:src="@drawable/selected_image"
            />

    </LinearLayout>

    <include layout="@layout/part_app_divide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="2dp"
            android:paddingStart="20dp"
            android:text="@string/ChangePassword"
            android:textSize="12sp"
            />

        <EditText
            android:id="@+id/settings_et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="12sp"
            />

    </LinearLayout>

</LinearLayout>
